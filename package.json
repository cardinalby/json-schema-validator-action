    "@types/jest": "^29.4.0",
    "@types/node": "^16.18.13",
    "@types/glob": "^8.1.0",
    "@vercel/ncc": "^0.36.1",
    "jest": "^29.4.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5",
    "github-action-ts-run-api": "^3.0.3",
    "fs-readdir-recursive": "^1.1.0",
